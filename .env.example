# ToraShaout Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# API CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# PAYMENT GATEWAYS
# ============================================

# Paynow (Zimbabwe)
PAYNOW_INTEGRATION_ID=your_integration_id
PAYNOW_INTEGRATION_KEY=your_integration_key
PAYNOW_RETURN_URL=https://torashaout.com/payment/return
PAYNOW_RESULT_URL=https://torashaout.com/api/webhooks/paynow

# Stripe (International)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# InnBucks (Remittances)
INNBUCKS_API_KEY=your_innbucks_key
INNBUCKS_MERCHANT_ID=your_merchant_id

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/torashaout
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================
# VIDEO INFRASTRUCTURE
# ============================================
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_STREAM_TOKEN=your_stream_token

# ============================================
# NOTIFICATIONS
# ============================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_USERNAME=your_username

RESEND_API_KEY=re_...

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_here
